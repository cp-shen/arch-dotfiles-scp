# variable setting
    set $mod Mod4
    set $md mode "default"


# default app setting
set $my_browser firefox
set $my_terminal kitty
set $my_file_manager kitty ranger


# xkill shortcut
# bindsym --release $mod+Shift+Control+q exec xkill


# mod + Enter to spawn a terminal
bindsym $mod+Return exec $my_terminal


# application launcher mode
bindsym $mod+o mode "launcher"
mode "launcher" {
    bindsym w exec $my_browser ; $md
    bindsym t exec $my_terminal ; $md
    bindsym e exec $my_file_manager ; $md
    bindsym Escape $md
}


# i3 management
    # reload the configuration file
    bindsym $mod+Shift+c reload
    # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
    bindsym $mod+Shift+r restart
    # exit i3 (logs you out of your X session)
    # bindsym $mod+Shift+e exit


# layout management
    # change container layout (stacked, tabbed, toggle split)
    #bindsym $mod+s layout stacking
    #bindsym $mod+w layout tabbed
    bindsym $mod+Shift+x layout toggle split

    # split in horizontal orientation
    #bindsym $mod+Shift+h split h
    # split in vertical orientation
    #bindsym $mod+Shift+v split v


# Font setting
font pango:Fira Code 10


# floating window
    # toggle tiling / floating
    bindsym $mod+Shift+space floating toggle

    # change focus between tiling / floating windows
    bindsym $mod+space focus mode_toggle

    # Use Mouse+$mod to drag floating windows to their wanted position
    floating_modifier $mod


# window management shortcuts
    # kill focused window
    bindsym $mod+Shift+q kill
    # change focus
    bindsym $mod+h focus left
    bindsym $mod+j focus down
    bindsym $mod+k focus up
    bindsym $mod+l focus right
    bindsym $mod+s focus output right
    # alternatively, you can use the cursor keys:
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right
    # move focused window
    bindsym $mod+Shift+h move left
    bindsym $mod+Shift+j move down
    bindsym $mod+Shift+k move up
    bindsym $mod+Shift+l move right
    # alternatively, you can use the cursor keys:
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
    # enter fullscreen mode for the focused container
    bindsym $mod+Shift+f fullscreen toggle
    # focus the parent container
    #bindsym $mod+a focus parent
    # focus the child container
    #bindsym $mod+d focus child


# workspace management
    set $ws1        1: term
    set $ws2        2: wwww
    set $ws3        3: files
    set $ws4        4: misc
    set $ws5        5
    set $ws6        6
    set $ws7        7
    set $ws8        8
    set $ws9        9
    set $ws10       10

    assign [class="(?i)kitty"] $ws1
    assign [class="(?i)xterm"] $ws1
    assign [class="(?i)chrome"] $ws2
    assign [class="(?i)firefox"] $ws2
    assign [class="(?i)nautilus"] $ws3
    assign [class="(?i)thunar"] $ws3
    assign [all] $ws4

    bindsym $mod+Shift+s move workspace to output right
    bindsym $mod+n workspace next_on_output
    bindsym $mod+Shift+n workspace prev_on_output
    bindsym $mod+p workspace back_and_forth

    # switch to workspace
    bindsym $mod+1 workspace number $ws1
    bindsym $mod+2 workspace number $ws2
    bindsym $mod+3 workspace number $ws3
    bindsym $mod+4 workspace number $ws4
    bindsym $mod+5 workspace number $ws5
    bindsym $mod+6 workspace number $ws6
    bindsym $mod+7 workspace number $ws7
    bindsym $mod+8 workspace number $ws8
    bindsym $mod+9 workspace number $ws9
    bindsym $mod+0 workspace number $ws10

    # move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace number $ws1  ; workspace $ws1
    bindsym $mod+Shift+2 move container to workspace number $ws2  ; workspace $ws2
    bindsym $mod+Shift+3 move container to workspace number $ws3  ; workspace $ws3
    bindsym $mod+Shift+4 move container to workspace number $ws4  ; workspace $ws4
    bindsym $mod+Shift+5 move container to workspace number $ws5  ; workspace $ws5
    bindsym $mod+Shift+6 move container to workspace number $ws6  ; workspace $ws6
    bindsym $mod+Shift+7 move container to workspace number $ws7  ; workspace $ws7
    bindsym $mod+Shift+8 move container to workspace number $ws8  ; workspace $ws8
    bindsym $mod+Shift+9 move container to workspace number $ws9  ; workspace $ws9
    bindsym $mod+Shift+0 move container to workspace number $ws10 ; workspace $ws10


# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Escape $md
}


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    font pango:Fira Code 10
    position top
    status_command i3blocks
    tray_output none
    colors {
        # background #000000
        background #1e1e1e
        statusline #ffffff
        separator #666666

        focused_workspace  #4c7899 #285577 #ffffff
        active_workspace   #333333 #5f676a #ffffff
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #2f343a #900000 #ffffff
        binding_mode       #2f343a #900000 #ffffff
    }
}

# set window gaps and borders
    for_window [all] border normal 0
    gaps inner 10

# startup applications
    exec --no-startup-id $my_terminal # auto spawn a terminal
    exec --no-startup-id $my_browser archwiki.org # auto open archwiki
    exec --no-startup-id unclutter # hide mouse cursor

focus_on_window_activation focus
